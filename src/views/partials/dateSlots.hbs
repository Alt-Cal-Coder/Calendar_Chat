<div class="mb-3" id="time-slot-container">
    <div class="row mb-3 g-2">
        <div class="col-6 col-sm-4 col-md-2">
            {{> timePicker id="startTime" }}
        </div>
        <div class="col-6 col-sm-4 col-md-2">
            {{> timePicker id="endTime" }}
        </div>
        <div class="col-6 col-sm-4 col-md-2">
            <input type="text" name="startDate" id="startDate" class="form-control date-input styled_input" placeholder="00/00/00"
                data-input>
        </div>
        <div class="col-6 col-sm-4 col-md-2">
            <input type="text" name="endDate" id="endDate" class="form-control date-input styled_input" placeholder="00/00/00"
                data-input>
        </div>
        <div class="col-6 col-sm-4 col-md-3">
            <input type="text" name="slot_name" id="slot_name" class="form-control styled_input" placeholder="TimeSlot Name">
        </div>
        <div class="col-6 col-sm-4 col-md-1 button-col d-flex align-items-center justify-content-end">
            <!-- Add/Delete buttons will be inserted here by script -->
        </div>
    </div>
</div>


<style>

    #time-slot-container::-webkit-scrollbar {
        width: 0.2rem;
        height: 0.5rem;
    }

    #time-slot-container::-webkit-scrollbar-thumb {
        background-color: #e6c95d;
        border-radius: 0.5rem;
    }

    #time-slot-container::-webkit-scrollbar-track {
        background-color: #080808;
        border-radius: 0.5rem;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        flatpickr("#startDate", {
            dateFormat: "m-d-Y", // Format for date input
            allowInput: true, // Allow manual input
            // Any other options you want
        });

        flatpickr("#endDate", {
            dateFormat: "m-d-Y", // Format for date input
            allowInput: true, // Allow manual input
            // Any other options you want
        });

        const inputs = document.querySelectorAll(".styled_input");

        inputs.forEach((input) => {
            input.addEventListener("input", function () {
            if (this.value.trim() !== "") {
                this.classList.add("filled");
            } else {
                this.classList.remove("filled");
            }
            });
        });
    });
</script>