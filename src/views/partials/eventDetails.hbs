<div class="mb-3">
    <input type="text" name="title" id="title" class="form-control styled_input" required placeholder="EVENT NAME">
</div>

<div class="row mb-3">
    <div class="col-md-6 mb-3 mb-md-0">
        <input class="form-control styled_input" placeholder="Organizer Name" type="text" id="org_name" name="org_name" />
    </div>
    <div class="col-md-6">
        <input class="form-control styled_input" placeholder="Organizer Email" type="email" id="org_mail" name="org_mail" />
    </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const inputs = document.querySelectorAll(".styled_input");

    inputs.forEach(input => {
      input.addEventListener("input", function () {
        if (this.value.trim() !== "") {
          this.classList.add("filled");
        } else {
          this.classList.remove("filled");
        }
      });
    });
  });
</script>
